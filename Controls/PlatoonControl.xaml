<UserControl x:Class="Star_Reverie_Inventory_Manager.Controls.PlatoonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="450">
    <StackPanel Margin="5">
        <TextBlock x:Name="nameTextBlock" Text="Name" FontSize="20"
                                   FontWeight="Bold"/>
        <TextBlock x:Name="itemProperty1TextBlock" Text="Squad Count" FontSize="15"
                                   Foreground="DodgerBlue"/>
        <TextBlock x:Name="itemProperty2Block" Text="Company: " FontSize="15"
                                   FontStyle="Italic"/>
    </StackPanel>
</UserControl>
