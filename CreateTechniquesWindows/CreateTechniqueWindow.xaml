<Window x:Class="Star_Reverie_Inventory_Manager.CreateTechniquesWindows.CreateTechniqueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TECHNIQUE MANIFESTATION"
        Height="500" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#0f061a">

    <Window.Resources>

        <!-- Themed TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Themed CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#d6c8ff"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Neon Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="BorderBrush" Value="#b14cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2a1245"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <DockPanel>

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#140822" Padding="12">
            <TextBlock Text="TECHNIQUE MANIFESTATION TERMINAL"
                       Foreground="#b14cff"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Background="#160a26"
                Margin="25"
                Padding="25"
                CornerRadius="8">

            <StackPanel>

                <TextBlock Text="CORE PARAMETERS"
                           Foreground="#b14cff"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0 0 0 15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Name:" Foreground="#d6c8ff"/>
                    <TextBox x:Name="nameTextBox" Grid.Column="1" Margin="0 0 0 8"/>

                    <TextBlock Text="Turn Count:" Grid.Row="1" Foreground="#d6c8ff"/>
                    <TextBox x:Name="turnCountTextBox" Grid.Row="1" Grid.Column="1" Margin="0 0 0 8"/>

                    <TextBlock Text="Stamina Cost:" Grid.Row="2" Foreground="#d6c8ff"/>
                    <TextBox x:Name="staminaCostTextBox" Grid.Row="2" Grid.Column="1" Margin="0 0 0 8"/>

                    <TextBlock Text="Cost:" Grid.Row="3" Foreground="#d6c8ff"/>
                    <TextBox x:Name="costTextBox" Grid.Row="3" Grid.Column="1" Margin="0 0 0 8"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0 20 0 20">
                    <TextBlock Text="Is Offensive:"
                               Foreground="#b14cff"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <CheckBox IsChecked="{Binding IsOffensive, Mode=TwoWay}"
                              Margin="12 0 0 0"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="MANIFEST TECHNIQUE"
                        Click="SaveButton_Click"/>

            </StackPanel>

        </Border>

    </DockPanel>

</Window>

