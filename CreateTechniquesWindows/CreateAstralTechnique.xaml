<Window x:Class="Star_Reverie_Inventory_Manager.CreateTechniquesWindows.CreateAstralTechniqueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ASTRAL TECHNIQUE MANIFESTATION"
        Height="800" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0f061a">
    <Window.Resources>

        <!-- Dark ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#1c0f30"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="5"/>

                        <Style.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2a1245"/>
                                <Setter Property="Foreground" Value="#c084fc"/>
                            </Trigger>

                            <!-- Selected -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3b1c60"/>
                                <Setter Property="Foreground" Value="#b14cff"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <DockPanel>

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#140822" Padding="12">
            <TextBlock Text="ASTRAL TECHNIQUE MANIFESTATION"
                       Foreground="#b14cff"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="#160a26" Margin="20" Padding="20" CornerRadius="8">
                <StackPanel>

                    <!-- BASIC DATA -->
                    <TextBlock Text="CORE PARAMETERS"
                               Foreground="#b14cff"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <Grid Margin="0 0 0 15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Name:" Foreground="#d6c8ff"/>
                        <TextBox x:Name="nameTextBox" Grid.Column="1"
                                 Background="#1c0f30"
                                 Foreground="White"
                                 BorderBrush="#301a4d"
                                 Margin="0 0 0 5"/>

                        <TextBlock Text="Dice Count:" Grid.Row="1" Foreground="#d6c8ff"/>
                        <TextBox x:Name="diceCountTextBox" Grid.Row="1" Grid.Column="1"
                                 Background="#1c0f30"
                                 Foreground="White"
                                 BorderBrush="#301a4d"
                                 Margin="0 0 0 5"/>

                        <TextBlock Text="Damage Type:" Grid.Row="2" Foreground="#d6c8ff"/>
                        <ComboBox x:Name="damageTypeBox"
                                  Grid.Row="2" Grid.Column="1"
                                  Background="#1c0f30"
                                  Foreground="White"
                                  BorderBrush="#301a4d"
                                  ItemsSource="{Binding DamageTypes}"
                                  SelectedItem="{Binding SelectedDamageType, Mode=TwoWay}"
                                  Margin="0 0 0 5"/>

                        <TextBlock Text="Target Area:" Grid.Row="3" Foreground="#d6c8ff"/>
                        <ComboBox x:Name="targetAreaBox"
                                  Grid.Row="3" Grid.Column="1"
                                  Background="#1c0f30"
                                  Foreground="White"
                                  BorderBrush="#301a4d"
                                  ItemsSource="{Binding TargetAreas}"
                                  SelectedItem="{Binding SelectedTargetArea, Mode=TwoWay}"
                                  Margin="0 0 0 5"/>
                    </Grid>

                    <!-- EFFECT SYSTEM -->
                    <TextBlock Text="EFFECT SYSTEM"
                               Foreground="#b14cff"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <Grid Margin="0 0 0 15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Effect:" Foreground="#d6c8ff"/>
                        <ComboBox x:Name="effectBox"
                                  Grid.Column="1"
                                  Background="#1c0f30"
                                  Foreground="White"
                                  BorderBrush="#301a4d"
                                  ItemsSource="{Binding AstralTechEffects}"
                                  SelectedItem="{Binding SelectedEffect, Mode=TwoWay}"
                                  Margin="0 0 0 5"/>

                        <TextBlock Text="Status Effect:" Grid.Row="1" Foreground="#d6c8ff"/>
                        <ComboBox x:Name="statuseffectBox"
                                  Grid.Row="1" Grid.Column="1"
                                  Background="#1c0f30"
                                  Foreground="White"
                                  BorderBrush="#301a4d"
                                  ItemsSource="{Binding StatusEffects}"
                                  SelectedItem="{Binding SelectedStatusEffect, Mode=TwoWay}"
                                  Margin="0 0 0 5"/>

                        <TextBlock Text="Effect Strength:" Grid.Row="2" Foreground="#d6c8ff"/>
                        <TextBox x:Name="statusEffectStrengthTextBox"
                                 Grid.Row="2" Grid.Column="1"
                                 Background="#1c0f30"
                                 Foreground="White"
                                 BorderBrush="#301a4d"
                                 Margin="0 0 0 5"/>
                    </Grid>

                    <!-- COMBAT METRICS -->
                    <TextBlock Text="COMBAT METRICS"
                               Foreground="#b14cff"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <UniformGrid Columns="2" Margin="0 0 0 15">

                        <!-- Left Column -->
                        <StackPanel>
                            <TextBlock Text="Accuracy:" Foreground="#d6c8ff"/>
                            <TextBox x:Name="accuracyTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>

                            <TextBlock Text="Range:" Foreground="#d6c8ff" Margin="0 8 0 0"/>
                            <TextBox x:Name="rangeTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>

                            <TextBlock Text="Turn Count:" Foreground="#d6c8ff" Margin="0 8 0 0"/>
                            <TextBox x:Name="turnCountTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>

                            <TextBlock Text="Turn Duration:" Foreground="#d6c8ff" Margin="0 8 0 0"/>
                            <TextBox x:Name="turnDurationTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel>
                            <TextBlock Text="Stamina Cost:" Foreground="#d6c8ff"/>
                            <TextBox x:Name="staminaCostTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>

                            <TextBlock Text="Int Req:" Foreground="#d6c8ff" Margin="0 8 0 0"/>
                            <TextBox x:Name="intTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>

                            <TextBlock Text="Radius:" Foreground="#d6c8ff" Margin="0 8 0 0"/>
                            <TextBox x:Name="radiusTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>

                            <TextBlock Text="Cost:" Foreground="#d6c8ff" Margin="0 8 0 0"/>
                            <TextBox x:Name="costTextBox" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d"/>
                        </StackPanel>
                    </UniformGrid>
                    <!-- AETHER MANIFESTATION ASSETS -->
                    <TextBlock Text="AETHER MANIFESTATION ASSETS"
                               Foreground="#b14cff"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0 10 0 10"/>

                    <Grid Margin="0 0 0 15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- VFX Path -->
                        <TextBlock Text="VFX Path:" 
                                   Foreground="#d6c8ff"/>

                        <TextBox x:Name="vfxPathTextBox"
                                 Grid.Column="1"
                                 Background="#1c0f30"
                                 Foreground="White"
                                 BorderBrush="#301a4d"
                                 Text="{Binding AstralTechVfxPath, Mode=TwoWay}"
                                 Margin="0 0 5 5"/>

                        <Button Grid.Column="2"
                                Content="Browse"
                                Click="BrowseVfx_Click"
                                Background="#1c0f30"
                                Foreground="#c084fc"
                                BorderBrush="#b14cff"
                                BorderThickness="1"
                                Cursor="Hand"
                                Margin="0 0 0 5"/>

                        <!-- SFX Path -->
                        <TextBlock Text="Sound Path:"
                                   Grid.Row="1"
                                   Foreground="#d6c8ff"/>

                        <TextBox x:Name="soundPathTextBox"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Background="#1c0f30"
                                 Foreground="White"
                                 BorderBrush="#301a4d"
                                 Text="{Binding AstralTechSoundEffectPath, Mode=TwoWay}"
                                 Margin="0 0 5 0"/>

                        <Button Grid.Row="1"
                                Grid.Column="2"
                                Content="Browse"
                                Click="BrowseSfx_Click"
                                Background="#1c0f30"
                                Foreground="#c084fc"
                                BorderBrush="#b14cff"
                                BorderThickness="1"
                                Cursor="Hand"/>
                    </Grid>
                    <!-- Toggle -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                        <TextBlock Text="Is Offensive:"
                                   Foreground="#b14cff"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding IsOffensive, Mode=TwoWay}"
                                  Margin="10 0 0 0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Save Button -->
                    <Button Content="MANIFEST ASTRAL TECHNIQUE"
                            Click="SaveButton_Click"
                            Background="#1c0f30"
                            Foreground="#c084fc"
                            BorderBrush="#b14cff"
                            BorderThickness="1"
                            FontWeight="Bold"
                            Height="45"
                            Cursor="Hand"/>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </DockPanel>
</Window>