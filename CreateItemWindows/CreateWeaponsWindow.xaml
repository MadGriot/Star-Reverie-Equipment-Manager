<Window x:Class="Star_Reverie_Inventory_Manager.CreateWeaponsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager"
        mc:Ignorable="d"
        Title="CreateWeaponsWindow" Height="700" Width="450">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Name: "/>
            <TextBox Width="300" x:Name="nameTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Description: "/>
            <TextBox Width="300" Height="100" x:Name="descriptionTextBox"
                        Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Origin: "/>
            <TextBox Width="300" x:Name="originTextBox"
                        Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Appearance Date (Triech): "/>
            <TextBox Width="200" x:Name="triechAppearanceTextBox"
                        Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Appearance Date (Earth): "/>
            <TextBox Width="200" x:Name="earthAppearanceTextBox"
                        Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Technology Level: "/>
            <ComboBox x:Name="techLevelComboBox"
                     Margin="0,0,0,5"
                     ItemsSource="{Binding TechnologyLevels}"
                     SelectedItem="{Binding SelectedTechnologyLevel, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Damage Type: "/>
            <ComboBox x:Name="damageTypeComboBox"
                      Margin="0,0,0,5"
                      ItemsSource="{Binding DamageTypes}"
                      SelectedItem="{Binding SelectedDamageType, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Weapon Type: "/>
            <ComboBox x:Name="weaponTypeComboBox"
              Margin="0,0,0,5"
              ItemsSource="{Binding WeaponTypes}"
              SelectedItem="{Binding SelectedWeaponType, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Skill: "/>
            <ComboBox x:Name="skillComboBox"
              Margin="0,0,0,5"
              ItemsSource="{Binding Skills}"
              SelectedItem="{Binding SelectedSkill, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Weapon Class: "/>
            <ComboBox x:Name="weaponClassComboBox"
              Margin="0,0,0,5"
              ItemsSource="{Binding WeaponClasses}"
              SelectedItem="{Binding SelectedWeaponClass, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Weapon Ammo: "/>
            <ComboBox x:Name="ammoComboBox"
                    Margin="0,0,0,5"
                    ItemsSource="{Binding AmmoModels}"
                    SelectedItem="{Binding SelectedAmmo, Mode=TwoWay}"
                    DisplayMemberPath="Name"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Dice Count: "/>
            <TextBox Width="75" x:Name="damageTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Modifier: "/>
            <TextBox Width="75" x:Name="modifierTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Accuracy: "/>
            <TextBox Width="75" x:Name="accTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Range: "/>
            <TextBox Width="75" x:Name="rangeTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Weight: "/>
            <TextBox Width="75" x:Name="weightTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="AmmoWeight: "/>
            <TextBox Width="75" x:Name="ammoWeightTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="RoF: "/>
            <TextBox Width="75" x:Name="roFTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Shots: "/>
            <TextBox Width="75" x:Name="ShotsTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="STR: "/>
            <TextBox Width="75" x:Name="STRTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Bulk: "/>
            <TextBox Width="75" x:Name="bulkTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Cost: "/>
            <TextBox Width="75" x:Name="costTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <Button Content="Save"
                    Click="SaveButton_Click"/>
    </StackPanel>
</Window>
