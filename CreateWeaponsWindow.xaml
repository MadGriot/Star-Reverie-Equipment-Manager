<Window x:Class="Star_Reverie_Inventory_Manager.CreateWeaponsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager"
        mc:Ignorable="d"
        Title="CreateWeaponsWindow" Height="450" Width="300">
    <Grid>
        <Grid>
            <StackPanel Margin="10">
                <TextBox x:Name="nameTextBox"
                       Margin="0,0,0,5"/>
                
                <ComboBox x:Name="damageTypeComboBox"
              Margin="0,0,0,5"
              ItemsSource="{Binding DamageTypes}"
              SelectedItem="{Binding SelectedDamageType, Mode=TwoWay}" />

                <ComboBox x:Name="weaponTypeComboBox"
              Margin="0,0,0,5"
              ItemsSource="{Binding WeaponTypes}"
              SelectedItem="{Binding SelectedWeaponType, Mode=TwoWay}" />
                
                <TextBox x:Name="damageTextBox"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="accTextBox"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="weightTextBox"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="roFTextBox"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="ShotsTextBox"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="STRTextBox"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="bulkTextBox"
                       Margin="0,0,0,5"/>
                <TextBox x:Name="costTextBox"
                       Margin="0,0,0,5"/>
                <Button Content="Save"
                    Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
