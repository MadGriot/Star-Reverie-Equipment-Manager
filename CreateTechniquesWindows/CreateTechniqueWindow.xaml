<Window x:Class="Star_Reverie_Inventory_Manager.CreateTechniquesWindows.CreateTechniqueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:StarReverieCore.Models;assembly=StarReverieCore"
        xmlns:mechanics="clr-namespace:StarReverieCore.Mechanics;assembly=StarReverieCore"
        Title="TECHNIQUE MANIFESTATION"
        Height="750" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#0f061a">

    <Window.Resources>

        <!-- Themed TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Themed CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#d6c8ff"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Neon Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="BorderBrush" Value="#b14cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2a1245"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <DockPanel>

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#140822" Padding="12">
            <TextBlock Text="TECHNIQUE MANIFESTATION TERMINAL"
                       Foreground="#b14cff"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Background="#160a26"
                Margin="25"
                Padding="25"
                CornerRadius="8">

            <StackPanel>

                <TextBlock Text="CORE PARAMETERS"
                           Foreground="#b14cff"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0 0 0 15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Name:" Foreground="#d6c8ff"/>
                    <TextBox x:Name="nameTextBox" Grid.Column="1" Margin="0 0 0 8"/>

                    <TextBlock Text="Turn Count:" Grid.Row="1" Foreground="#d6c8ff"/>
                    <TextBox x:Name="turnCountTextBox" Grid.Row="1" Grid.Column="1" Margin="0 0 0 8"/>

                    <TextBlock Text="Stamina Cost:" Grid.Row="2" Foreground="#d6c8ff"/>
                    <TextBox x:Name="staminaCostTextBox" Grid.Row="2" Grid.Column="1" Margin="0 0 0 8"/>

                    <TextBlock Text="Cost:" Grid.Row="3" Foreground="#d6c8ff"/>
                    <TextBox x:Name="costTextBox" Grid.Row="3" Grid.Column="1" Margin="0 0 0 8"/>
                </Grid>
                <!-- Technique Requirements -->
                <GroupBox Header="Technique Requirements"
          Foreground="#c084fc"
          FontWeight="Bold"
          Margin="0,15,0,0"
          Padding="10">

                    <StackPanel>

                        <!-- Add Requirement Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">

                            <ComboBox x:Name="requirementTypeComboBox"
                                  Width="150"
                                  Background="#1c0f30"
                                  Foreground="White"
                                  BorderBrush="#301a4d"
                                  Padding="3"
                                  SelectedIndex="0">
                                <ComboBoxItem Content="Attribute Requirement"/>
                                <ComboBoxItem Content="Skill Requirement"/>

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="#1c0f30"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="3"/>
                                        <Style.Triggers>
                                            <!-- Hover color -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2a1245"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <!-- Selected item color -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#2a1245"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>

                            <Button Content="Add Requirement"
                    Margin="10,0,0,0"
                    Click="AddRequirement_Click"/>
                        </StackPanel>

                        <!-- Requirements List -->
                        <ListView ItemsSource="{Binding TechniqueRequirements}"
                              Height="180"
                              Background="#1c0f30"
                              Foreground="White"
                              BorderBrush="#301a4d"
                              BorderThickness="1">

                            <ListView.Resources>

                                <!-- ATTRIBUTE REQUIREMENT TEMPLATE -->
                                <DataTemplate DataType="{x:Type models:AttributeRequirement}">
                                    <Border Padding="5" Margin="0,5" Background="#160a26">
                                        <StackPanel>

                                            <TextBlock Text="Attribute Requirement"
                               Foreground="#c084fc"
                               FontWeight="Bold"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                                <!-- Attribute Dropdown -->
                                                <ComboBox Width="150"
                                                  ItemsSource="{Binding DataContext.AttributeTypes,
                                                      RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedItem="{Binding AttributeType, Mode=TwoWay}"
                                                  Background="#1c0f30"
                                                  Foreground="White"
                                                  BorderBrush="#301a4d"
                                                  Padding="3"
                                                  >
                                                    <ComboBox.ItemContainerStyle>
                                                        <Style TargetType="ComboBoxItem">
                                                            <Setter Property="Background" Value="#1c0f30"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Padding" Value="3"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="#2a1245"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#2a1245"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ComboBox.ItemContainerStyle>
                                                </ComboBox>

                                                <!-- Required Value -->
                                                <TextBox Width="60"
                                 Margin="10,0,0,0"
                                 Text="{Binding RequiredValue,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>

                                        </StackPanel>
                                    </Border>
                                </DataTemplate>

                                <!-- SKILL REQUIREMENT TEMPLATE -->
                                <DataTemplate DataType="{x:Type models:SkillRequirement}">
                                    <Border Padding="5" Margin="0,5" Background="#160a26">
                                        <StackPanel>

                                            <TextBlock Text="Skill Requirement"
                               Foreground="#c084fc"
                               FontWeight="Bold"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                                <!-- Skill Dropdown -->
                                                <ComboBox Width="150"
                                                      ItemsSource="{Binding DataContext.Skills,
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                      SelectedItem="{Binding Skill, Mode=TwoWay}"
                                                      Background="#1c0f30"
                                                      Foreground="White"
                                                      BorderBrush="#301a4d"
                                                      Padding="3">
                                                    <ComboBox.ItemContainerStyle>
                                                        <Style TargetType="ComboBoxItem">
                                                            <Setter Property="Background" Value="#1c0f30"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="Padding" Value="3"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="#2a1245"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#2a1245"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ComboBox.ItemContainerStyle>
                                                </ComboBox>


                                                <!-- Required Level -->
                                                <TextBox Width="60"
                                 Margin="10,0,0,0"
                                 Text="{Binding RequiredLevel,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>

                                        </StackPanel>
                                    </Border>
                                </DataTemplate>

                            </ListView.Resources>

                        </ListView>



                    </StackPanel>
                </GroupBox>
                <StackPanel Orientation="Horizontal" Margin="0 20 0 20">
                    <TextBlock Text="Is Offensive:"
                               Foreground="#b14cff"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <CheckBox IsChecked="{Binding IsOffensive, Mode=TwoWay}"
                              Margin="12 0 0 0"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="MANIFEST TECHNIQUE"
                        Click="SaveButton_Click"/>

            </StackPanel>

        </Border>

    </DockPanel>

</Window>

