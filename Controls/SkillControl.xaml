<UserControl x:Class="Star_Reverie_Inventory_Manager.Controls.SkillControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button VerticalAlignment="Top" x:Name="SubtractSkillButton" Click="SubtractSkillButton_Click" Margin="5">-</Button>
        <TextBlock VerticalAlignment="Center" x:Name="nameTextBlock" Margin="0,0,5,0" Text="Skill Name" FontSize="10" />
        <TextBlock VerticalAlignment="Center" x:Name="skillLevel" Text="0" FontSize="10" />
        <Button VerticalAlignment="Top" x:Name="AddSkillButton" Click="AddSkillButton_Click" Margin="5">+</Button>
    </StackPanel>
</UserControl>
