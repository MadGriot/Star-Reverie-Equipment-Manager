<Window x:Class="Star_Reverie_Inventory_Manager.CreateWeaponsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="STAR REVERIE // WEAPON FABRICATION"
        Height="760"
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#0f061a">

    <Window.Resources>

        <!-- Space Gradient -->
        <LinearGradientBrush x:Key="SpaceBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0f061a" Offset="0"/>
            <GradientStop Color="#1a0b2e" Offset="1"/>
        </LinearGradientBrush>

        <!-- Brushes -->
        <SolidColorBrush x:Key="NeonPurple" Color="#b14cff"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#160a26"/>

        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#b14cff"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 10 0 6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Labels -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d6c8ff"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="5 0 0 5"/>
        </Style>

        <!-- TERMINAL COMBOBOX -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="#e6dcff"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="5 0 0 5"/>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#1c0f30"/>
                        <Setter Property="Foreground" Value="#e6dcff"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                        <Style.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#2a1450"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>

                            <!-- Selected -->
                            <Trigger Property="IsSelected" Value="True">
                                <!-- Darker, less bright than neon -->
                                <Setter Property="Background" Value="#3b1e63"/>
                                <Setter Property="Foreground" Value="#c084fc"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Save Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="BorderBrush" Value="#b14cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 15 0 0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Window.Resources>

    <DockPanel Background="{StaticResource SpaceBackground}">

        <!-- Top Terminal Header -->
        <Border DockPanel.Dock="Top"
                Background="#140822"
                Padding="10">
            <TextBlock Text="WEAPON FABRICATION TERMINAL"
                       Foreground="#b14cff"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- BASIC DATA -->
                <TextBlock Text="IDENTIFICATION DATA" Style="{StaticResource SectionHeader}"/>

                <Grid Margin="0 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0"/>
                    <TextBox x:Name="nameTextBox" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Origin:" Grid.Row="1" Grid.Column="0"/>
                    <TextBox x:Name="originTextBox" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Triech Date:" Grid.Row="2" Grid.Column="0"/>
                    <TextBox x:Name="triechAppearanceTextBox" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Earth Date:" Grid.Row="3" Grid.Column="0"/>
                    <TextBox x:Name="earthAppearanceTextBox" Grid.Row="3" Grid.Column="1"/>
                </Grid>

                <TextBlock Text="Description:" Margin="0 5 0 2"/>
                <TextBox x:Name="descriptionTextBox"
         Height="80"
         TextWrapping="Wrap"
         AcceptsReturn="True"/>

                <!-- CLASSIFICATION -->
                <TextBlock Text="CLASSIFICATION MATRIX" Style="{StaticResource SectionHeader}"/>

                <Grid Margin="0 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tech Level:" Grid.Row="0"/>
                    <ComboBox x:Name="techLevelComboBox"
              Grid.Row="0"
              Grid.Column="1"
              ItemsSource="{Binding TechnologyLevels}"
              SelectedItem="{Binding SelectedTechnologyLevel}"/>

                    <TextBlock Text="Damage Type:" Grid.Row="1"/>
                    <ComboBox x:Name="damageTypeComboBox"
              Grid.Row="1"
              Grid.Column="1"
              ItemsSource="{Binding DamageTypes}"
              SelectedItem="{Binding SelectedDamageType}"/>

                    <TextBlock Text="Weapon Type:" Grid.Row="2"/>
                    <ComboBox x:Name="weaponTypeComboBox"
              Grid.Row="2"
              Grid.Column="1"
              ItemsSource="{Binding WeaponTypes}"
              SelectedItem="{Binding SelectedWeaponType}"/>

                    <TextBlock Text="Skill:" Grid.Row="3"/>
                    <ComboBox x:Name="skillComboBox"
              Grid.Row="3"
              Grid.Column="1"
              ItemsSource="{Binding Skills}"
              SelectedItem="{Binding SelectedSkill}"/>

                    <TextBlock Text="Weapon Class:" Grid.Row="4"/>
                    <ComboBox x:Name="weaponClassComboBox"
              Grid.Row="4"
              Grid.Column="1"
              ItemsSource="{Binding WeaponClasses}"
              SelectedItem="{Binding SelectedWeaponClass}"/>

                    <TextBlock Text="Ammo Type:" Grid.Row="5"/>
                    <ComboBox x:Name="ammoComboBox"
              Grid.Row="5"
              Grid.Column="1"
              ItemsSource="{Binding AmmoModels}"
              SelectedItem="{Binding SelectedAmmo}"
              DisplayMemberPath="Name"/>
                </Grid>

                <!-- PERFORMANCE -->
                <TextBlock Text="PERFORMANCE PARAMETERS" Style="{StaticResource SectionHeader}"/>

                <UniformGrid Columns="4" Margin="0 5 0 0">

                    <StackPanel>
                        <TextBlock Text="Dice"/>
                        <TextBox x:Name="damageTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Modifier"/>
                        <TextBox x:Name="modifierTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Accuracy"/>
                        <TextBox x:Name="accTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Range"/>
                        <TextBox x:Name="rangeTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Weight"/>
                        <TextBox x:Name="weightTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Ammo Wt"/>
                        <TextBox x:Name="ammoWeightTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="RoF"/>
                        <TextBox x:Name="roFTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Shots"/>
                        <TextBox x:Name="ShotsTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="STR"/>
                        <TextBox x:Name="STRTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Bulk"/>
                        <TextBox x:Name="bulkTextBox"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Cost"/>
                        <TextBox x:Name="costTextBox"/>
                    </StackPanel>

                </UniformGrid>

                <!-- SAVE -->
                <Button Content="INITIATE FABRICATION"
                        Click="SaveButton_Click"
                        Height="45"/>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>