<Window x:Class="Star_Reverie_Inventory_Manager.CharacterManager.PlatoonDetialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.CharacterManager"
        xmlns:pc="clr-namespace:Star_Reverie_Inventory_Manager.Controls"
        mc:Ignorable="d"
        Title="PlatoonDetialsWindow" Height="450" Width="400">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="namePlatoon" Text="Platoon Name: "/>
        </StackPanel>
        <StackPanel>
            <ListView x:Name="ItemsListView"
                      Height="200"
                      SelectionChanged="ItemsListView_SelectionChanged"
                      Margin="0 5 0 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <pc:PlatoonSquadsControl
                PlatoonSquad="{Binding}"
                DeleteRequested="PlatoonSquadsControl_DeleteRequested"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <Button Content="Add Squad" Margin="2"
                    Click="AddSquadButton_Click"/>
            <Button Content="Delete Platoon" Margin="2" Background="Red" Foreground="White"
                    Click="DeletePlatoonButton_Click"/>
        <Button Content="Exit" Margin="2" Background="LightCyan"
                Click="ExitButton_Click" />
    </StackPanel>
</Window>
