<Window x:Class="Star_Reverie_Inventory_Manager.CharacterManager.DisplaySquadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.CharacterManager"
        xmlns:sc="clr-namespace:Star_Reverie_Inventory_Manager.Controls"
        mc:Ignorable="d"
        Title="DisplaySquadWindow" Height="450" Width="500">
    <StackPanel Margin="10">
        <TextBox Margin="0 5 0 5"
                                 TextChanged="TextBox_TextChanged"/>
        <ListView x:Name="ItemsListView"
                      Height="400"
                      SelectionChanged="ItemsListView_SelectionChanged"
                      Margin="0 5 0 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <sc:SquadControl Squad="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
