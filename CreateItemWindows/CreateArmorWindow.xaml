<Window x:Class="Star_Reverie_Inventory_Manager.CreateItemWindows.CreateArmorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ARMOR FABRICATION TERMINAL"  
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#0f061a">

    <Window.Resources>
        <!-- Brushes -->
        <SolidColorBrush x:Key="NeonPurple" Color="#b14cff"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#160a26"/>

        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#b14cff"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 10 0 6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Labels -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d6c8ff"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="5 0 0 5"/>
        </Style>

        <!-- Dark Terminal ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <!-- Closed box dark background -->
            <Setter Property="Foreground" Value="#e6dcff"/>
            <!-- Closed box text -->
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="5 0 0 5"/>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#1c0f30"/>
                        <!-- Dark dropdown items -->
                        <Setter Property="Foreground" Value="#e6dcff"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

                        <Style.Triggers>
                            <!-- Hover highlight -->
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#2a1450"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>

                            <!-- Selected item in dropdown -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3b1e63"/>
                                <!-- subtle dark purple -->
                                <Setter Property="Foreground" Value="#c084fc"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="BorderBrush" Value="#b14cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 15 0 0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Window.Resources>

    <DockPanel Background="#0f061a">

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#140822" Padding="10">
            <TextBlock Text="ARMOR FABRICATION TERMINAL"
                       Foreground="#b14cff"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- IDENTIFICATION DATA -->
                <TextBlock Text="IDENTIFICATION DATA" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0"/>
                    <TextBox x:Name="nameTextBox" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Origin:" Grid.Row="1" Grid.Column="0"/>
                    <TextBox x:Name="originTextBox" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Triech Date:" Grid.Row="2" Grid.Column="0"/>
                    <TextBox x:Name="triechAppearanceTextBox" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Earth Date:" Grid.Row="3" Grid.Column="0"/>
                    <TextBox x:Name="earthAppearanceTextBox" Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="Description:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBox x:Name="descriptionTextBox"
                             Grid.Row="4" Grid.Column="1"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </Grid>

                <!-- CLASSIFICATION -->
                <TextBlock Text="CLASSIFICATION MATRIX" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Technology Level:" Grid.Row="0"/>
                    <ComboBox x:Name="techLevelComboBox"
                              Grid.Row="0"
                              Grid.Column="1"
                              ItemsSource="{Binding TechnologyLevels}"
                              SelectedItem="{Binding SelectedTechnologyLevel}"/>

                    <TextBlock Text="Armor Location:" Grid.Row="1"/>
                    <ComboBox x:Name="armorLocationComboBox"
                              Grid.Row="1"
                              Grid.Column="1"
                              ItemsSource="{Binding ArmorLocations}"
                              SelectedItem="{Binding SelectedArmorLocation}"/>
                </Grid>

                <!-- PERFORMANCE -->
                <TextBlock Text="PERFORMANCE PARAMETERS" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Damage Resistance:" Grid.Row="0"/>
                    <TextBox x:Name="damageResistanceTextBox" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Weight:" Grid.Row="1"/>
                    <TextBox x:Name="weightTextBox" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Cost:" Grid.Row="2"/>
                    <TextBox x:Name="costTextBox" Grid.Row="2" Grid.Column="1"/>
                </Grid>

                <!-- SAVE -->
                <Button Content="INITIATE FABRICATION" Click="SaveButton_Click" Height="45"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
