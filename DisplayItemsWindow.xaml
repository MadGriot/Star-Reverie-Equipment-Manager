<Window x:Class="Star_Reverie_Inventory_Manager.DisplayItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager"
        xmlns:ic="clr-namespace:Star_Reverie_Inventory_Manager.Controls"
        mc:Ignorable="d"
        Title="DisplayWeaponsWindow" Height="450" Width="500">
    <StackPanel Margin="10">
        <TextBox Margin="0 5 0 5"
                                 TextChanged="TextBox_TextChanged"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="SubtractQuantityButton" Click="SubtractQuantityButton_Click" Margin="5">-</Button>
            <TextBlock Text="Quantity" Margin="2" VerticalAlignment="Center"/>
            <TextBlock  x:Name="quantityNumber" Text="1" VerticalAlignment="Center"/>
            <Button x:Name="AddQuantityButton" Click="AddQuantityButton_Click" Margin="5">+</Button>
        </StackPanel>
        <ListView x:Name="ItemsListView"
                      Height="400"
                      SelectionChanged="ItemsListView_SelectionChanged"
                      Margin="0 5 0 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ic:ItemControl Item="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
