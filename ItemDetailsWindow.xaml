<Window x:Class="Star_Reverie_Inventory_Manager.ItemDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager"
        mc:Ignorable="d"
        Title="ItemDetailsWindow" Height="450" Width="500">
    <Grid>
        <StackPanel>
            <Button Content="Update" Margin="0,0,0,5"
                    Click="UpdateButton_Click"
                    />
            <Button Content="Delete" Margin="0,0,0,5"
                    Background="Red" Foreground="White" Click="DeleteButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
