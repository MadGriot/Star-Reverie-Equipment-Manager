<Window x:Class="Star_Reverie_Inventory_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Create Item">
                <MenuItem Header="_Create Weapon" Click="CreateWeaponButton_Click" />
                <MenuItem Header="_Create Armor" Click="CreateArmorButton_Click"/>
                <MenuItem Header="_Create Shield" Click="CreateShieldButton_Click"/>
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Display Items">
                <MenuItem Header="_Display Weapons" Click="DisplayWeaponsButton_Click" />
                <MenuItem Header="_Display Armors" Click="DisplayArmorsButton_Click" />
                <MenuItem Header="_Display Shields" Click="DisplayShieldsButton_Click" />
            </MenuItem>
        </Menu>
        <StackPanel Margin="10">
            <TextBox Margin="0 5 0 5"
                 TextChanged="TextBox_TextChanged"/>
            <ListView x:Name="ItemsListView"
                  SelectionChanged="ItemsListView_SelectionChanged"
                  Height="280"
                  Margin="0 5 0 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock FontSize="20" Foreground="DarkCyan" FontWeight="Bold">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="FirstName" />
                                        <Binding Path="LastName" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="15" FontWeight="Bold" Text="Equipped Weapon: "/>
                                <TextBlock FontSize="15" Text="{Binding Weapon.Name}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="15" FontWeight="Bold" Text="Equipped Armor: "/>
                                <TextBlock FontSize="15" Text="{Binding Armor.Name}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </DockPanel>

</Window>
