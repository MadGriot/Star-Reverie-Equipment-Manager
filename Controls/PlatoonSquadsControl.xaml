             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
