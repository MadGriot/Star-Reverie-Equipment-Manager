<Window x:Class="Star_Reverie_Inventory_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500
        ">
    <StackPanel Margin="10">
        <Button Content="Create Weapon" Margin="5"
                Click="CreateWeaponButton_Click"/>
        <Button Content="Display Weapons" Margin="5"
                Click="DisplayWeaponsButton_Click"/>
        <ListView x:Name="ItemsListView"
                  Height="280"
                  Margin="0 5 0 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="20" Foreground="DarkCyan" FontWeight="Bold">
                            <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="FirstName" />
                                <Binding Path="LastName" />
                            </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="15" FontWeight="Bold" Text="Equipped Weapon: "/>
                            <TextBlock FontSize="15" Text="{Binding Weapon.Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="15" FontWeight="Bold" Text="Equipped Armor: "/>
                            <TextBlock FontSize="15" Text="{Binding Armor.Name}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
