<Window x:Class="Star_Reverie_Inventory_Manager.DisplayItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager"
        mc:Ignorable="d"
        Title="DisplayWeaponsWindow" Height="450" Width="500">
    <Grid>
        <StackPanel>
            <TextBox Margin="0 5 0 5"
                                 TextChanged="TextBox_TextChanged"/>
            <ListView x:Name="ItemsListView"
                      SelectionChanged="ItemsListView_SelectionChanged"
                      Margin="0 5 0 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>

                        <TextBlock Text="{Binding Name}" FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock Text="....." FontSize="15"
                                   Foreground="DodgerBlue"/>
                        <TextBlock Text="...." FontSize="15"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackPanel>
    </Grid>
</Window>
