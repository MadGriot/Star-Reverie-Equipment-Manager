<Window x:Class="Star_Reverie_Inventory_Manager.QuestManager.CreateQuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.QuestManager"
        mc:Ignorable="d"
        Title="Create Quest" Height="550" Width="700"
        Background="#160a26">

    <Window.Resources>
        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="BorderBrush" Value="#b14cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2a1245"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Group Box Header Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">

            <!-- Quest Info -->
            <GroupBox Header="Quest Info">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Quest Key:" Width="100"/>
                        <TextBox x:Name="questKeyTextBox" Width="400"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Name:" Width="100"/>
                        <TextBox x:Name="nameTextBox" Width="400"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                        <TextBlock Text="Description:" Width="100" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <TextBox x:Name="descriptionTextBox" Width="400" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Quest Stages -->
            <GroupBox Header="Quest Stages">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock Text="Number of Stages:" Width="130"/>
                        <TextBlock x:Name="questStageAmount" Width="50" Text="0" HorizontalAlignment="Center"/>
                        <Button Content="Add Stage" Click="AddQuestStageButton_Click" Margin="10,0,0,0"/>
                    </StackPanel>

                    <ListView x:Name="questStagesListView" Height="150" Margin="0,5,0,0" Background="#1c0f30" Foreground="White" BorderBrush="#301a4d" BorderThickness="1"/>
                </StackPanel>
            </GroupBox>

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save Quest" Width="120" Click="SaveButton_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
