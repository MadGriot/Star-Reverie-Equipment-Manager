<Window x:Class="Star_Reverie_Inventory_Manager.CharacterManager.CreateSquadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.CharacterManager"
        mc:Ignorable="d"
        Title="CreateSquadWindow" Height="100" Width="400">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Name: "/>
            <TextBox Width="300" x:Name="nameTextBox"
                         Margin="0,0,0,5"/>
        </StackPanel>

        <Button Content="Save"
                    Click="SaveButton_Click"/>
    </StackPanel>
</Window>
