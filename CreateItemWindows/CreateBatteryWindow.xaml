<Window x:Class="Star_Reverie_Inventory_Manager.CreateItemWindows.CreateBatteryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BATTERY FABRICATION TERMINAL"  
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#0f061a">

    <Window.Resources>
        <!-- Brushes -->
        <SolidColorBrush x:Key="NeonPurple" Color="#b14cff"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#160a26"/>

        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#b14cff"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 10 0 6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Labels -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#d6c8ff"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="5 0 0 5"/>
        </Style>

        <!-- ComboBoxes (fully dark) -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#301a4d"/>
            <Setter Property="Margin" Value="5 0 0 5"/>
        </Style>

        <!-- Buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1c0f30"/>
            <Setter Property="Foreground" Value="#c084fc"/>
            <Setter Property="BorderBrush" Value="#b14cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 15 0 0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Small reminder text -->
        <Style x:Key="ReminderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#a58aff"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="5 0 0 5"/>
        </Style>

    </Window.Resources>

    <DockPanel Background="#0f061a">

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#140822" Padding="10">
            <TextBlock Text="BATTERY FABRICATION TERMINAL"
                       Foreground="#b14cff"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- IDENTIFICATION DATA -->
                <TextBlock Text="IDENTIFICATION DATA" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0"/>
                    <TextBox x:Name="nameTextBox" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Origin:" Grid.Row="1" Grid.Column="0"/>
                    <TextBox x:Name="originTextBox" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Triech Date:" Grid.Row="2" Grid.Column="0"/>
                    <TextBox x:Name="triechAppearanceTextBox" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Earth Date:" Grid.Row="3" Grid.Column="0"/>
                    <TextBox x:Name="earthAppearanceTextBox" Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="Description:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBox x:Name="descriptionTextBox"
                             Grid.Row="4" Grid.Column="1"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </Grid>

                <!-- PERFORMANCE -->
                <TextBlock Text="PERFORMANCE PARAMETERS" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0 5 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Charge Amount:" Grid.Row="0"/>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- TextBox -->
                        <TextBox x:Name="chargeAmountTextBox" Width="80" Grid.Column="0"/>

                        <!-- Reminder -->
                        <TextBlock Text="(0.x)" 
               Style="{StaticResource ReminderText}" 
               VerticalAlignment="Center" 
               Margin="5 0 0 0"
               Grid.Column="1"/>
                    </Grid>

                    <TextBlock Text="Weight:" Grid.Row="1"/>
                    <TextBox x:Name="weightTextBox" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Cost:" Grid.Row="2"/>
                    <TextBox x:Name="costTextBox" Grid.Row="2" Grid.Column="1"/>
                </Grid>

                <!-- SAVE -->
                <Button Content="INITIATE FABRICATION" Click="SaveButton_Click" Height="45"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
