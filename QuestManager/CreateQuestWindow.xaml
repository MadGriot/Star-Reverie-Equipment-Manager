<Window x:Class="Star_Reverie_Inventory_Manager.QuestManager.CreateQuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.QuestManager"
        mc:Ignorable="d"
        Title="CreateQuestWindow" Height="450" Width="700">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Quest Key: "/>
            <TextBox Width="300" x:Name="questKeyTextBox"
                         Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Name: "/>
            <TextBox Width="300" x:Name="nameTextBox"
                         Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="70" Height="100" Text="Description: "/>
            <TextBox Width="500" x:Name="damageResistanceTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="75" Text="Quest Stages: "/>
            <TextBlock Width="100" x:Name="questStageAmount"
                        Text="0" Margin="0,0,0,5"/>
            <Button Content="Add Quest Stage"
                    Click="AddQuestStageButton_Click" Margin="0,0,0,5"/>
        </StackPanel>
        <Button Content="Save"
                    Click="SaveButton_Click"/>
    </StackPanel>
</Window>
