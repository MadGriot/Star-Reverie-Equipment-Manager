<Window x:Class="Star_Reverie_Inventory_Manager.DialogueManager.CreateDialogueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Reverie_Inventory_Manager.DialogueManager"
        mc:Ignorable="d"
        Title="CreateDialogueWindow" Height="450" Width="700">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="70" Height="100" Text="Dialogue Text: "/>
            <TextBox Width="500" x:Name="dialogueTextBox"
                       Margin="0,0,0,5"/>
        </StackPanel>
        <Button Content="Cancel " Margin="2" Background="LightCyan"
                    Click="CancelButton_Click" />
        <Button Content="Add" Margin="2"
                    Click="SaveButton_Click"/>
    </StackPanel>
</Window>
