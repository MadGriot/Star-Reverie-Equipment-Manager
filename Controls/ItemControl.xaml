<UserControl x:Class="Star_Reverie_Inventory_Manager.Controls.ItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Border x:Name="RootBorder"
            Background="#1c0f30"
            BorderBrush="#301a4d"
            BorderThickness="1"
            CornerRadius="6"
            Padding="10"
            Margin="4">

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#000000"
                                          BlurRadius="6"
                                          ShadowDepth="0"
                                          Opacity="0.4"/>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>

                    <!-- Hover Glow -->
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#b14cff"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="#b14cff"
                                                  BlurRadius="18"
                                                  ShadowDepth="0"
                                                  Opacity="0.9"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>

                </Style.Triggers>
            </Style>
        </Border.Style>

        <StackPanel>
            <TextBlock x:Name="nameTextBlock"
                       Text="Item Name"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#c084fc"/>

            <TextBlock x:Name="itemProperty1TextBlock"
                       Text="Weapon Class"
                       FontSize="14"
                       Foreground="#8a5ccf"/>

            <TextBlock x:Name="itemProperty2Block"
                       Text="Damage Type"
                       FontSize="14"
                       FontStyle="Italic"
                       Foreground="#dddddd"/>
        </StackPanel>
    </Border>
</UserControl>

